# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/langgraph_poc

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=fastapi-langgraph-poc

# SMS Service (Mock for POC)
SMS_PROVIDER=mock
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Working Hours Configuration
ENFORCE_WORKING_HOURS=false
WORKING_HOURS_START=0
WORKING_HOURS_END=24
ALLOW_WEEKEND_SENDING=true

# App Settings
DEBUG=true
LOG_LEVEL=INFO

